{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug application in Renode",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/nrf52-bootloader.elf",
      "miDebuggerPath": "gdb-multiarch",
      "miDebuggerServerAddress": "localhost:3333",
      "MIMode": "gdb",
      "preLaunchTask": "Run Renode",
      "postDebugTask": "Close Renode",
      "args": [],
      "stopAtEntry": true,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "setupCommands": [
        {
            "description": "Add source directory",
            "text": "directory ${workspaceFolder}/..",
            "ignoreFailures": false
        },
    }
  ]
}
